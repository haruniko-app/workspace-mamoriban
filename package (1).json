{
  "name": "workspace-mamoriban",
  "version": "0.1.0",
  "description": "Google Workspace向けセキュリティ可視化ツール - 共有設定の可視化と情報漏洩リスク検出",
  "author": "haruniko-app",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/haruniko-app/workspace-mamoriban.git"
  },
  "keywords": [
    "google-workspace",
    "google-apps-script",
    "security",
    "drive",
    "sharing",
    "audit",
    "isms",
    "compliance"
  ],
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "push": "cd apps-script && clasp push",
    "push:watch": "cd apps-script && clasp push --watch",
    "pull": "cd apps-script && clasp pull",
    "deploy": "cd apps-script && clasp push && clasp deploy",
    "deploy:dev": "cd apps-script && clasp push && clasp deploy -d \"Dev $(date +%Y%m%d-%H%M%S)\"",
    "deploy:prod": "cd apps-script && clasp push && clasp deploy -d \"Production $(date +%Y%m%d-%H%M%S)\"",
    "open": "cd apps-script && clasp open",
    "logs": "cd apps-script && clasp logs",
    "logs:watch": "cd apps-script && clasp logs --watch",
    "test": "bash scripts/test.sh",
    "lint": "eslint 'apps-script/src/**/*.js'",
    "lint:fix": "eslint 'apps-script/src/**/*.js' --fix",
    "create-project": "cd apps-script && clasp create --type standalone --title 'Workspace守り番'",
    "versions": "cd apps-script && clasp versions",
    "status": "cd apps-script && clasp status"
  },
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@types/google-apps-script": "^1.0.70",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
