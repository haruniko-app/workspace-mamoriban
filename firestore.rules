rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // サーバーサイドからのみアクセス可能（Cloud Run経由）
    // クライアントからの直接アクセスは禁止

    // 組織情報
    match /organizations/{orgId} {
      // サーバーサイドのみ読み書き可能
      allow read, write: if false;
    }

    // ユーザー情報
    match /users/{userId} {
      // サーバーサイドのみ読み書き可能
      allow read, write: if false;
    }

    // スキャン履歴
    match /scans/{scanId} {
      // サーバーサイドのみ読み書き可能
      allow read, write: if false;
    }
  }
}
